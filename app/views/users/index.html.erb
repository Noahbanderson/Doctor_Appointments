<h1>Patients</h1>
<hr />

<ul>
  <% @users.each do |user| %>
    <li><h3><%= user.full_name %>, illness: <%= user.illness%></h3></li>
    <span>
      <%= link_to 'View Patient', user_path(user), class: "ui green button small" %>
      <%= link_to 'Edit Patient', edit_user_path(user), class: "ui blue button small" %>
      <%= link_to 'Delete Patient', user_path(user), method: :delete, class: "ui red button small" %>
    </span>
  <% end %>
</ul>



<br />
<br />
<%= link_to 'Create new patient', new_user_path, class: "ui purple button" %>
