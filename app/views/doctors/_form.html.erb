<h1><%= @doc.id ? "Edit Doc's Name" : "New Doctor" %></h1>
<hr />
<%= form_with(model: @doc, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :doc_name %>
    <%= f.text_field :doc_name, required: true, placeholder: "Doctor's Last Name", autofocus: true %>
  </div>

  <%= f.submit class: "ui green button" %>

<% end %>
<br />
<br />
<br />
<%= link_to 'Return to Doctors', doctors_path, class: "ui red button" %>